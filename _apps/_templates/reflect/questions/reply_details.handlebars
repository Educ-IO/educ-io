  <div class="reply w-100 px-2 py-1 o-{{#if faded}}50{{else}}75{{/if}}" data-id="{{id}}">
    <div class="d-flex justify-content-between align-items-center pb-1">
      <p class="mb-0 select-none">This reply was given by <strong class="text-body"{{#if email}} data-toggle="tooltip" title="{{email}}"{{/if}}>{{#is who "===" true}}you{{else}}{{who}}{{/is}}</strong></p>
      <p class="small mb-0 p-1 select-none" data-toggle="tooltip" data-html="true" title="<strong>Reply Created</strong><br />{{localeDate created}}">{{when}}</p>
    </div>
    <div class="bg-light rounded rounded-lg d-flex justify-content-between align-items-center mb-1 py-1">
      <p class="content-value small mb-0 p-1">{{reply}}</p>
    </div>
  </div>
