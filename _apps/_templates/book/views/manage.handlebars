<div {{#if id}}id="{{id}}" {{/if}}class="container-fluid pt-lg-1 mvh-100">
  
  {{> date}}
  
  <div class="row m-0 pt-2 d-flex flex-column-reverse flex-lg-row">
    
    <div class="col-12 col-lg-4 col-xl-3 px-0 px-md-3">
      
      {{> search placeholder="Search Resources"}}
      
      <div id="resources">{{> resources resources=data selectable=selectable simple=simple}}</div>

    </div>
    
    <div class="col-12 col-lg-8 col-xl-9 px-0 px-md-3">
      
      <div class="row">
        
        <div id="shortcut" class="col-12">

          <div class="form-group">
            <input type="text" class="form-control shortcut" id="shortcut_Text" placeholder="Scan QR Code" />
          </div>

        </div>

        <div id="details" class="col-12"></div>
        
      </div>
      
    </div>
    
  </div>
</div>
