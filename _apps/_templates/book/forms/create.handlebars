<form id="book-new" class="needs-validation" role="form">
  <div class="form-row">

    <div class="form-group col-md-5 m-0 pr-md-1 pr-xl-3">
      <label class="sr-only" for="txtDetails">Details</label>
      <div class="input-group">
        <div class="input-group-prepend d-none d-lg-flex" data-toggle="tooltip" data-html="true" title="You can enter the <strong>title</strong> of your booking here, which will be visible to <strong>all users</strong> of the system at your G-Suite domain.">
          <span class="input-group-text align-self-stretch"><i class="material-icons h-100 d-inline-flex md-18">notes</i></span>
        </div>
        <input type="text" class="form-control mb-1 mb-md-0" id="txtDetails" name="details" placeholder="Details"{{#present text}} value="{{text}}"{{/present}}>
      </div>
    </div>

    <div class="form-group col-9 col-md-5 col-xl-6 m-0 pr-md-1 pr-xl-3">
      <label class="sr-only" for="txtTimes">From / Until</label>
      <div class="input-group" id="txtTimes">
        <div class="input-group-prepend d-none d-xl-flex" data-toggle="tooltip" data-html="true" title="Please enter the <strong>start time</strong> that you would like to book from. You can use any time format, e.g. 09:00, 9am.">
          <span class="input-group-text align-self-stretch"><i class="material-icons h-100 d-inline-flex md-18">query_builder</i></span>
        </div>
        <input type="text" class="form-control times mb-1 mb-md-0 mr-1 mr-md-0" style="background-clip: border-box;"
               id="txtFrom" name="from" placeholder="From" data-action="start"
               required pattern="(?:^|\s)((0?[1-9]|1[012])([:.]?[0-5][0-9])?(\s?[apAP][mM])|([01]?[0-9]|2[0-3])([:.]?[0-5][0-9]))(?:[.!?]?)(?:\s|$)">
        <div class="input-group-append input-group-prepend d-none d-md-flex" data-toggle="tooltip" data-html="true" title="Please enter the <strong>end time</strong> for your booking.">
          <span class="input-group-text align-self-stretch"><i class="material-icons h-100 d-inline-flex md-18">forward</i></span>
        </div>
        <input type="text" class="form-control until-date mb-1 mb-md-0 ml-1 ml-md-0 pl-0 d-none px-0 text-center bg-dark text-light border-dark"
               style="background-clip: border-box;" id="txtUntil_Date" name="until-date" data-toggle="tooltip" data-html="true" title="This will be the <strong>end date</strong> of the booking." readonly>
        <input type="text" class="form-control times mb-1 mb-md-0 ml-1 ml-md-0" style="background-clip: border-box;"
               id="txtUntil" name="until" placeholder="Until" data-action="end"
               required pattern="(?:^|\s)((0?[1-9]|1[012])([:.]?[0-5][0-9])?(\s?[apAP][mM])|([01]?[0-9]|2[0-3])([:.]?[0-5][0-9]))(?:[.!?]?)(?:\s|$)">
      </div>
    </div>

    <div class="form-group col-3 col-md-2 col-xl-1 m-0 d-flex align-items-center justify-content-end">
      {{> control_button b_class="btn-primary btn-sm btn-block py-2 mb-1" a_type="submit" b_text="Book" }}
    </div>
  </div>
</form>
