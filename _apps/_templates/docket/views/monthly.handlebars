{{~#if name}}{{> name }}{{/if~}}
<div {{#if id}}id="{{id}}" {{/if}}class="items-holder border-exagerate container-fluid pt-lg-2 px-1 px-sm-2 px-lg-3 mvh-100">
  <div class="row month m-0">
    <div class="col-12 col-md-6 col-lg-4 col-xl-2 d-flex flex-wrap align-items-center border border-white rounded bg-highlight-lightest py-2">
      <h4 class="display-4 mb-lg-0">
        <span class="text-muted font-weight-bold d-inline-flex mr-2 mr-xl-0">{{title}}</span>
        <span class="d-inline-flex">{{year}}</span>
      </h4>
    </div>
  	{{#each days}}<div class="group {{#if class}}{{class}} {{/if}}col-12{{#unless large}} col-md-6 col-lg-4 col-xl-2{{else}} col-lg-4{{/unless}} mb-1 px-1"{{#if date}} data-droppable="true" data-date="{{isoDate date true}}"{{/if}}>
      <div class="d-flex flex-column small{{#if pre_title_class}} {{pre_title_class}}{{/if}}">
          {{#if action}}<a class="{{#if title_class}}{{title_class}} {{/if}}day" href="#{{action}}">{{/if}}<h4 class="{{#unless action}}{{#if title_class}}{{title_class}} {{/if}}{{/unless}}mb-1">{{ title }}{{#if subtitle}}<span class="font-weight-light ml-1">{{subtitle}}</span>{{/if}}</h4>{{#if action}}</a>{{/if}}
        {{!-- <hr class="m-0 mt-2 mb-1 divider" data-divider="true" /> --}}
        <div class="d-none" data-divider="true" />
        {{#if extras}}{{#each extras}}
					{{!-- Extras are overlays (e.g. calendars) --}}
          {{!-- Call Partial Template --}}
					{{> item editable=false small=true static=true}}
        {{/each}}{{/if}}
        {{#if events}}{{#each events}}
					{{!-- Call Partial Template --}}
					{{> item editable=true small=true}}
        {{/each}}{{/if}}
        {{#if tasks}}{{#each tasks}}
        	{{!-- Call Partial Template --}}
					{{> item editable=true small=true}}
        {{/each}}{{/if}}
      </div>
  	</div>{{/each}}
  </div>
</div>
{{#if action}}{{> action id=id action=action}}{{/if}}
